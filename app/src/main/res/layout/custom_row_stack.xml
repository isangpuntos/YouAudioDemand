<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/crsRelative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.isang.puntos.youaudiodemand.PageMainActivity">


    <ImageView
        android:id="@+id/row_imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/row_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some Item"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333333"
        android:ellipsize="end"
        android:layout_alignTop="@+id/row_imageView1"
        android:layout_toRightOf="@+id/row_imageView1"
        android:layout_toEndOf="@+id/row_imageView1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/row_textView2"
        android:layout_below="@+id/row_textView1"
        android:layout_toRightOf="@+id/row_imageView1"
        android:layout_toEndOf="@+id/row_imageView1"/>

    <ImageView
        android:id="@+id/row_click_imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:clickable="true"
        android:src="@drawable/ic_action_overflow"
        android:layout_alignParentRight="true" />

</RelativeLayout>